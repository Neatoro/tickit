{
  "name": "ticket-system",
  "version": "1.0.0",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "pkg": {
    "assets": [
      "dist/client"
    ],
    "targets": [
      "node18"
    ],
    "outputPath": "bin"
  },
  "scripts": {
    "dev": "nodemon -e ts,hbs,yaml -w ./example -w ./server -x ts-node server/index.ts --config=example/simple-project/config.yaml",
    "dev:frontend": "vite",
    "prettify": "prettier -w .",
    "build": "run-s build:backend build:frontend pkg",
    "build:backend": "tsc",
    "build:frontend": "vite build",
    "pkg": "pkg .",
    "test:api": "npm run build && npm run test:api:ci",
    "test:api:ci": "node test/api/jasmine.js"
  },
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.2.5",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.5",
    "@nestjs/platform-express": "^10.2.5",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "hbs": "^4.2.0",
    "helmet": "^7.0.0",
    "pinia": "^2.1.6",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.3.17",
    "vue": "^3.3.4",
    "vue-router": "^4.2.5",
    "yaml": "^2.3.2",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/node": "^20.6.0",
    "@vitejs/plugin-vue": "^4.4.0",
    "axios": "^1.5.0",
    "cssnano": "^6.0.1",
    "jasmine": "^5.1.0",
    "jasmine-console-reporter": "^3.1.0",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "postcss": "^8.4.30",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "prettier": "^3.0.3",
    "rollup": "^3.29.3",
    "rollup-plugin-copy": "^3.5.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "wait-port": "^1.1.0"
  }
}
